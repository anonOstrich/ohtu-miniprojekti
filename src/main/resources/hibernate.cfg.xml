<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:bookmarks</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">false</property>
		<property name="hibernate.hbm2ddl.auto">validate</property>
        <!-- use create to drop and create, use for example update to not drop -->
        <property name="hbm2ddl.auto">update</property>

        <!-- mappings -->
        <mapping class="bookmarks.Bookmark"/>
        <mapping class="bookmarks.BlogBookmark"/>
        <mapping class="bookmarks.BookBookmark"/>
        <mapping class="bookmarks.OtherBookmark"/>
        <mapping class="app.domain.Tag" />
    </session-factory>
</hibernate-configuration>
